  <!-- Charts Script -->
  <script>
    const emrCtx = document.getElementById('emrChart').getContext('2d');
    new Chart(emrCtx, {
      type: 'bar',
      data: {
        labels: ['Nigeria', 'Kenya', 'South Africa'],
        datasets: [{
          label: '% of facilities using EMRs',
          data: [15, 40, 65],
          backgroundColor: ['#ff6361', '#58508d', '#003f5c'],
          borderRadius: 4,
          barPercentage: 0.6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            max: 100,
            title: { display: true, text: 'Percentage (%)' }
          }
        },
        plugins: { legend: { display: false } }
      }
    });

    const benefitsCtx = document.getElementById('benefitsChart').getContext('2d');
    new Chart(benefitsCtx, {
      type: 'doughnut',
      data: {
        labels: ['Efficiency', 'Cost Savings', 'Quality of Care', 'Reduced Fraud'],
        datasets: [{
          data: [35, 25, 30, 10],
          backgroundColor: ['#bc5090', '#ffa600', '#58508d', '#ff6361'],
          borderColor: '#FFFFFF',
          borderWidth: 4,
          hoverOffset: 8
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { position: 'bottom', labels: { font: { size: 14 } } }
        },
        cutout: '60%'
      }
    });
  </script>
